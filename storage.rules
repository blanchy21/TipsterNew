rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload their own profile images
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload post images
    match /posts/{postId}/{fileName} {
      allow read: if true; // Anyone can read post images
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload message images
    match /messages/{messageId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
